
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ page import="java.util.*, java.text.DecimalFormat" %>
<%
    // Sample cart data (you can fetch this from session or database)
    class CartItem {
        String name;
        String variant;
        double price;
        int quantity;
        String imageUrl;

        CartItem(String name, String variant, double price, int quantity, String imageUrl) {
            this.name = name;
            this.variant = variant;
            this.price = price;
            this.quantity = quantity;
            this.imageUrl = imageUrl;
        }
    }

    List<CartItem> cartItems = new ArrayList<>();
    cartItems.add(new CartItem("lavender foam hand soap", "lavendar", 4.00, 2, "https://via.placeholder.com/60x60/ffb6c1/fff?text=Soap"));
    cartItems.add(new CartItem("method men bar soap", "sea + surf", 4.00, 2, "https://via.placeholder.com/60x60/ffd700/fff?text=Soap"));
    cartItems.add(new CartItem("lemon mint foam hand soap", "lemon mint", 4.00, 2, "https://via.placeholder.com/60x60/87ceeb/fff?text=Soap"));

    double subtotal = 0;
    for (CartItem item : cartItems) {
        subtotal += item.price * item.quantity;
    }

    double processingFee = 2.00;
    double total = subtotal + processingFee;
    DecimalFormat df = new DecimalFormat("£0.00");
%>

<!DOCTYPE html>
<html lang="en">
