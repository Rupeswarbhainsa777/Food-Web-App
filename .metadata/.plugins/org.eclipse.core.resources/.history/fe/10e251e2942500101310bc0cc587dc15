    <%-- Paste your existing style block here --%>
  </style>
</head>
<body>

<div class="cart-container">
  <div class="cart-left">
    <h2>Food cart</h2>

    <div class="cart-items">
      <% for (CartItem item : cartItems) { %>
      <div class="item">
        <img src="<%= item.imageUrl %>" alt="">
        <div class="item-details">
          <h4><%= item.name %></h4>
          <small><%= item.variant %></small>
        </div>
        <div class="quantity">
          <button>-</button>
          <span><%= item.quantity %></span>
          <button>+</button>
        </div>
        <p><%= df.format(item.price) %></p>
        <button class="remove">×</button>
      </div>
      <% } %>
    </div>
  </div>

  <div class="cart-summary">
    <h3>summary</h3>
    <label>coupon code</label>
    <input type="text" placeholder="0000">
    <a href="#" class="add-voucher">+ add</a>

    <div class="summary-line">
      <span>subtotal</span><span><%= df.format(subtotal) %></span>
    </div>
    <div class="summary-line">
      <span>other processing fee</span><span><%= df.format(processingFee) %></span>
    </div>
    <div class="summary-line">
      <span>est taxes</span><span>—</span>
    </div>
    <div class="summary-line total">
      <span>total</span><span><%= df.format(total) %></span>
    </div>

    <div class="summary-line grand-total">
      <span>grand total</span><span><strong><%= df.format(total) %></strong></span>
    </div>

    <button class="checkout-btn">proceed to checkout</button>
  </div>
</div>

