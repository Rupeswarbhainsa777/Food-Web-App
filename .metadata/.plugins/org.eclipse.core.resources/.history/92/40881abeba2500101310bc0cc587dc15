  <% if (cart != null && !cart.getItems().isEmpty()) { %>
    <div class="cart-title">Your selected items</div>
    <% for (CartItem item : cart.getItems().values()) {
         double subTotal = item.getPrice() * item.getQuantity();
         totalPrice += subTotal;
    %>
      <div class="cart-item">
        <div class="item-info">
          <p><%= item.getName() %></p>
          <div class="price">Price: ₹<%= item.getPrice() %> | Subtotal: ₹<%= subTotal %></div>
        </div>
        <form action="Cart" method="post" class="quantity-controls">
          <input type="hidden" name="itemId" value="<%= item.getItemId() %>">
          <input type="number" name="quantity" value="<%= item.getQuantity() %>" min="1">
          <input type="submit" name="action" value="update" class="update-btn">
          <input type="submit" name="action" value="remove" class="remove-btn">
        </form>
      </div>
    <% } %>

    <div class="total-section">
      Grand Total: <%= df.format(totalPrice) %>
    </div>

    <div class="buttons">
