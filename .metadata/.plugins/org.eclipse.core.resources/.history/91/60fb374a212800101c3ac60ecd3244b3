<div class="slider-container">
    <div class="slider-track" id="slider">
        <% if (menuList != null && !menuList.isEmpty()) {
            for (Dish dish : menuList) {
        %>
            <div class="slide">
                <div class="content">
                    <div class="text">
                        <h3>Our Special Dish</h3>
                        <h1><%= dish.getName() %></h1>
                        <p><%= dish.getDescription() %></p>
