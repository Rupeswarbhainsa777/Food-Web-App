package com.tap.controller;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.util.List;

import com.tap.DaoImple.MenuImp;
import com.tap.modeal.Menu;

@WebServlet("/Menu")
public class Menue extends HttpServlet {

    @Override
    protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
        try {
            // Get restaurantId from request parameter
            int restaurantId = ("restaurantId");

            // Get menu list from DAO
            MenuImp menuDao = new MenuImp();
            List<Menu> menuList = menuDao.getAllMenuByRestarent(restaurantId);

            // Set menu list in request attributes
            req.setAttribute("menuList", menuList);

            // Optional: Print to server logs for debugging
            for (Menu m : menuList) {
                System.out.println("Menu Item: " + m.getItemName());
            }

            // Forward to JSP
            RequestDispatcher rd = req.getRequestDispatcher("menu.jsp");
            rd.forward(req, resp);
        } catch (Exception e) {
            e.printStackTrace();
            req.setAttribute("errorMessage", "Failed to load menu: " + e.getMessage());
            RequestDispatcher rd = req.getRequestDispatcher("error.jsp");
            rd.forward(req, resp);
        }
    }
}

