        }
        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .card {
        height: 60vh:
            display: flex;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            padding: 30px;
