package com.tap.Test;
import com.tap.*;
import com.tap.DaoImple.*;

import java.util.ArrayList;

public class Test4 {
    public static void main(String[] args) 
    {
        OrderDao orderDAO = new OrdersImp();

        // ✅ Test 1: Add a new order
        Orders newOrder = new Orders();
        newOrder.setUserId(1);             // Set existing user ID
        newOrder.setRestaurantId(101);     // Set existing restaurant ID
        newOrder.setTotalAmount(250.75);
        newOrder.setStatus("PENDING");
        newOrder.setPaymentMode("CASH");

        int generatedId = orderDAO.addOrder(newOrder);
        System.out.println("Generated Order ID: " + generatedId);

        // ✅ Test 2: Get all orders for a user
        int userId = 1;
        ArrayList<Orders> userOrders = orderDAO.getAllOrders(userId);
        System.out.println("\nOrders for User ID " + userId + ":");
        for (Orders order : userOrders) {
            System.out.println(order);
        }

        // ✅ Test 3: Get specific order by restaurant ID
        int restaurantId = 101;
        Orders specificOrder = orderDAO.specificOrder(restaurantId);
        System.out.println("\nOrder for Restaurant ID " + restaurantId + ":");
        System.out.println(specificOrder);
    }
}
